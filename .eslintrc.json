{
	"env": {
		"browser": true,
		"node": true
	},
	"extends": ["airbnb", "prettier", "plugin:react/recommended"],
	"parserOptions": {
		"sourceType": "module"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	},
	"rules": {
		"semi": "error",
		"no-console": "warn",
		"class-methods-use-this": "off",
		"no-plusplus": "off",
		"react/jsx-props-no-spreading": "off",
		"react/react-in-jsx-scope": "off",
		"import/no-unresolved": [
			"error",
			{
				"ignore": ["^@wordpress/"]
			}
		]
	},
	"ignorePatterns": [
		"node_modules",
		"build",
		"dist",
		"package.json",
		"package-lock.json"
	]
}